<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="handus.dao.MemberDao">
	<insert id="insertMember" parameterType="int">
		insert into MEMBER 
    	( M_PK, M_ID, M_PASSWORD, M_NAME, M_EMAIL, M_PHONENUM, M_ADDRESS )
    	values (MEMBER_SEQ.NEXTVAL, #{m_id}, #{m_password}, #{m_name}, #{m_email}, #{m_phonenum}, #{m_address} )
	</insert>
	<update id="updateMember" parameterType="int">
		update MEMBER
		set M_PASSWORD = #{m_password}, M_NAME = #{m_name}, M_ADDRESS = 3{M_ADDRESS} 
		where M_PK = #{m_pk} 
	</update>
	<delete id="deleteMember" parameterType="int">
		delete from MEMBER
		where M_PK = #{m_pk} 
	</delete>
	<select id="selectByID" parameterType="String" resultMap="memberMap">
		select * from MEMBER
		where M_ID = #{m_id} 
	</select>
	<select id="selectByNum" parameterType="int" resultMap="memberMap">
		select * from MEMBER
		where M_PK = #{m_pk} 
	</select>
	<select id="selectAllMember" resultMap="memberMap">
		select * from MEMBER
	</select>
	<resultMap type="member" id="memberMap">
		<result column="M_PK" property="m_pk"/>
		<result column="M_ID" property="m_id"/>
		<result column="M_PASSWORD" property="m_password"/>
		<result column="M_NAME" property="m_name"/>
		<result column="M_EMAIL" property="m_email"/>
		<result column="M_PHONENUM" property="m_phonenum"/>
		<result column="M_ENABLED" property="m_enabled"/>
		<result column="M_REGDATE" property="m_regdate"/>
		<result column="M_ADDRESS" property="m_address"/>
	</resultMap>
</mapper>